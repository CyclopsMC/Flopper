{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",

  "name": "${mod_name}",
  "description": "${description}",
  "authors": [
    "${mod_author}"
  ],
  "contact": {
    "homepage": "${display_url}",
    "sources": "${issue_tracker_url}"
  },

  "license": "${license}",
  "icon": "logo.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "org.cyclops.flopper.FlopperFabric"
    ],
    "client": [
      "org.cyclops.flopper.FlopperClientFabric"
    ]
  },
  "accessWidener" : "flopper.accesswidener",
  "mixins": [
    "mixins.flopper.json"
  ],

  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "fabric-api": ">=${fabric_version}",
    "java": ">=${java_version}"
  }
}